<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CompleteCustomerSurvey</fullName>
    <active>true</active>
    <errorConditionFormula>OR($Profile.Name=&apos;Vendedor&apos;,$Profile.Name=&apos;Representante&apos;,$Profile.Name=&apos;Representante Partner&apos;) &amp;&amp; 
( 
